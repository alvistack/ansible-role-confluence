# {{ ansible_managed }}

[Unit]
Description=Atlassian Confluence
After=syslog.target network.target

[Service]
ExecStart={{ confluence_catalina }}/bin/start-confluence.sh
ExecStop={{ confluence_catalina }}/bin/stop-confluence.sh
PIDFile={{ confluence_catalina }}/work/catalina.pid
Type=forking
User={{ confluence_owner }}
Group={{ confluence_group }}

[Install]
WantedBy=multi-user.target
